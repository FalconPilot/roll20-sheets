<div class="sc-tab character fcol fw">
  <div class="sc-infos frow fw fwrap">
    <input
      type="text"
      class="line-input fw"
      name="attr_character_name"
      placeholder="Nom du personnage"
    />
    <select name="attr_race" class="line-input qw">
      <option selected disabled>Race (?)</option>
      <option value="human">Humain</option>
      <option value="doppleganger">Doppleganger</option>
      <option value="endaari">Endaari</option>
      <option value="alkor">Alkor</option>
      <option value="drone">Drone</option>
      <option value="troll">Troll</option>
      <option value="changeling">Changelin</option>
    </select>
    <input
      type="number"
      class="line-input"
      name="attr_age"
      placeholder="Âge"
    />
    <span class="line-input">ans</span>
    <select name="attr_gender" class="line-input">
      <option selected disabled>Genre (?)</option>
      <option value="m">Masculin</option>
      <option value="f">Féminin</option>
      <option value="other">Autre</option>
    </select>
    <input
      type="text"
      class="line-input"
      name="attr_gender_other"
      placeholder="Genre"
    />
  </div>
    
  <!-- STATS -->
  <div class="sc-stats fw frow fwrap">
    <% Object.entries(constants.stats).forEach(([stat, name]) => { %>
      <div class="sc-stat hw frow <%= stat %>">
        <% const displayName = `${name[0].toUpperCase()}${name.slice(1)}` %>
        <h3 class="line-input"><%= displayName %></h3>
        <div class="frow">
          <label class="sc-value">
            <input
              type="number"
              name="attr_<%= stat %>"
              title="<%= displayName %>"
              min="1"
              value="1"
            />
          </label>
          <% const prefix = name[0].toLowerCase().includes(['a', 'e', 'i', 'o', 'u']) ? 'd\'' : 'de ' %>
          <label class="sc-limit">
            <input
              type="number"
              name="attr_<%= stat %>_limit"
              title="Limite <%= prefix %><%= name %>"
              min="1"
              value="2"
            />
          </label>
        </div>
      </div>
    <% }) %>
  </div>
</div>
